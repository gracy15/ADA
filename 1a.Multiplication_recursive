#include<iostream>
using namespace std;
int Mult(int x,int y)
{
	if(y==1) return x;
	int r=x+Mult(x,y-1);
	return r;
}
int main()
{
	int x,y;
	cout<<"Enter number 1:";
	cin>>x;
	cout<<"Enter number 2:";
	cin>>y;
	if(x==0 || y==0) cout<<"0";
	else if(y==1) cout<<x;
	else if(x==1) cout<<y;
	else cout<<Mult(x,y);
}
